<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:windowAnimationStyle">@style/MyActivitySwitchAnimation</item>
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="MyActivitySwitchAnimation">
        <!-- 进入一个新的Activity的时候，A->B B进入动画 -->
        <item name="android:activityOpenEnterAnimation">@anim/come_in</item>
        <!-- 进入一个新的Activity的时候，A->B A退出动画 -->
        <item name="android:activityOpenExitAnimation">@anim/come_out</item>
        <!-- 退出一个Activity的时候，B返回到A A进入动画 -->
        <item name="android:activityCloseEnterAnimation">@anim/leave_in</item>
        <!-- 退出一个Activity的时候，B返回到A B退出动画 -->
        <item name="android:activityCloseExitAnimation">@anim/leave_out</item>
    </style>

    <style name="TextOverCount" parent="Base.TextAppearance.AppCompat.Light.Widget.PopupMenu.Small">
        <item name="android:textColor">@android:color/holo_red_light</item>
    </style>
    <style name="MyEditTextStyle" >
        <item name="colorControlNormal">@color/gray</item><!--默认显示下划线的颜色-->
        <item name="colorControlActivated">@color/black</item><!--点击后下划线的颜色-->
        <item name="colorAccent">@color/colorPrimaryDark</item>
    </style>
</resources>
